@model MvcApplicationDZ220614.Models.Movies
@using System.Collections.Generic;
@using MvcApplicationDZ220614.Models;


@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Movies</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
       

        <div class="editor-label">
            @Html.LabelFor(model => model.ImageUrl)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ImageUrl)
            @Html.ValidationMessageFor(model => model.ImageUrl)
        </div> 
        <div class="editor-field">
            
            @Html.ListBoxFor(model => model.Actors, new MultiSelectList(Model.Actors, "Id", "Name"))      
            @Html.ValidationMessageFor(model=> model.Actors)                 
                <input type="submit" value="<---" id="b1" name="button1" />                  
                <input type="submit" value="--->" id="b2" name="button2" />                            
            <select name="select2" size="5" multiple>
            @{MvcApplicationDZ220614.Controllers.ActorsController b = new MvcApplicationDZ220614.Controllers.ActorsController();
              for (int i = 0; i < b.ListActors().Count(); i++)
              {                 
                  <option value="@b.ListActors()[i].Id">@b.ListActors()[i].Name</option>                         
              }           
             }
           </select>                  
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
